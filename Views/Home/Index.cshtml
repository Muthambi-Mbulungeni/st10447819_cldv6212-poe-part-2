@model ABCRetailers.Models.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Home";
}

<div class="text-center mb-5 mt-4">
    <h1 class="display-4 mb-3">
        <span class="text-primary">Welcome to</span> xyzretailers
    </h1>
    <p class="lead">Your one-stop shop for the best deals and latest products</p>
</div>

<!-- Stats Summary -->
<div class="row mb-4">
    <div class="col-md-4 mb-4">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="rounded-circle bg-primary bg-opacity-10 p-3 me-3">
                        <i class="fas fa-users fa-2x text-primary"></i>
                    </div>
                    <div>
                        <h3 class="mb-0">@Model.CustomerCount</h3>
                        <p class="text-muted mb-0">Customers</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="rounded-circle bg-success bg-opacity-10 p-3 me-3">
                        <i class="fas fa-box fa-2x text-success"></i>
                    </div>
                    <div>
                        <h3 class="mb-0">@Model.ProductCount</h3>
                        <p class="text-muted mb-0">Products</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="rounded-circle bg-warning bg-opacity-10 p-3 me-3">
                        <i class="fas fa-shopping-cart fa-2x text-warning"></i>
                    </div>
                    <div>
                        <h3 class="mb-0">@Model.OrderCount</h3>
                        <p class="text-muted mb-0">Orders</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Action Buttons -->
<div class="row mb-5">
    <div class="col-md-3 mb-4">
        <a asp-controller="Customer" asp-action="Index" class="card action-btn text-decoration-none">
            <div class="card-body d-flex flex-column justify-content-center align-items-center bg-primary bg-opacity-10 h-100">
                <i class="fas fa-users fa-3x mb-3 text-primary"></i>
                <h5 class="card-title mb-1">Customers</h5>
                <p class="card-text text-muted">Manage your customers</p>
            </div>
        </a>
    </div>
    <div class="col-md-3 mb-4">
        <a asp-controller="Product" asp-action="Index" class="card action-btn text-decoration-none">
            <div class="card-body d-flex flex-column justify-content-center align-items-center bg-success bg-opacity-10 h-100">
                <i class="fas fa-box fa-3x mb-3 text-success"></i>
                <h5 class="card-title mb-1">Products</h5>
                <p class="card-text text-muted">Manage your inventory</p>
            </div>
        </a>
    </div>
    <div class="col-md-3 mb-4">
        <a asp-controller="Order" asp-action="Index" class="card action-btn text-decoration-none">
            <div class="card-body d-flex flex-column justify-content-center align-items-center bg-warning bg-opacity-10 h-100">
                <i class="fas fa-shopping-cart fa-3x mb-3 text-warning"></i>
                <h5 class="card-title mb-1">Orders</h5>
                <p class="card-text text-muted">Track customer orders</p>
            </div>
        </a>
    </div>
    <div class="col-md-3 mb-4">
        <a asp-controller="Upload" asp-action="Index" class="card action-btn text-decoration-none">
            <div class="card-body d-flex flex-column justify-content-center align-items-center bg-info bg-opacity-10 h-100">
                <i class="fas fa-upload fa-3x mb-3 text-info"></i>
                <h5 class="card-title mb-1">Upload Files</h5>
                <p class="card-text text-muted">Manage payment proofs</p>
            </div>
        </a>
    </div>
</div>

<!-- Storage Initialization (if needed) -->
@if (Model.CustomerCount == 0 && Model.ProductCount == 0 && Model.OrderCount == 0)
{
    <div class="card border-0 shadow-sm mb-5">
        <div class="card-body">
            <div class="d-flex align-items-center mb-3">
                <div class="rounded-circle bg-warning bg-opacity-10 p-3 me-3">
                    <i class="fas fa-exclamation-triangle fa-2x text-warning"></i>
                </div>
                <h5 class="mb-0">First Time Setup</h5>
            </div>
            <p>It looks like this is your first time running the application. Click the button below to initialize Azure Storage.</p>
            <form asp-action="InitializeStorage" method="post">
                <button type="submit" class="btn btn-warning">
                    <i class="fas fa-cog me-2"></i> Initialize Azure Storage
                </button>
            </form>
        </div>
    </div>
}

<!-- Featured Products Section -->
<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="mb-0">
                <i class="fas fa-star text-warning me-2"></i> Featured Products
            </h2>
            <a asp-controller="Product" asp-action="Create" class="btn btn-sm btn-primary">
                <i class="fas fa-plus me-1"></i> Add Product
            </a>
        </div>

        @if (Model.FeaturedProducts.Any())
        {
            <div class="row">
                @foreach (var product in Model.FeaturedProducts)
                {
                    <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6 mb-4">
                        <div class="card product-card h-100 border-0">
                            @if (!string.IsNullOrEmpty(product.ImageUrl))
                            {
                                <img src="@product.ImageUrl" class="card-img-top product-img" alt="@product.ProductName">
                            }
                            else
                            {
                                <div class="card-img-top product-img bg-light d-flex align-items-center justify-content-center">
                                    <i class="fas fa-image fa-3x text-muted"></i>
                                </div>
                            }
                            <div class="card-body d-flex flex-column">
                                <h6 class="card-title">@product.ProductName</h6>
                                <p class="card-text small text-muted flex-grow-1">@(product.Description.Length > 50 ? product.Description.Substring(0, 50) + "..." : product.Description)</p>
                                <div class="mt-auto">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="fw-bold text-success">@product.Price.ToString("C")</span>
                                        <span class="badge bg-light text-dark">Stock: @product.StockAvailable</span>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer bg-white border-0 pt-0">
                                <a asp-controller="Product" asp-action="Edit" asp-route-id="@product.ProductId" class="btn btn-sm btn-outline-primary w-100">
                                    <i class="fas fa-eye me-1"></i> View Details
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center py-5">
                    <i class="fas fa-box fa-4x text-muted mb-3"></i>
                    <h5>No products available yet</h5>
                    <p class="text-muted">Add your first product to get started</p>
                    <a asp-controller="Product" asp-action="Create" class="btn btn-primary mt-2">
                        <i class="fas fa-plus me-2"></i> Add Product
                    </a>
                </div>
            </div>
        }
    </div>
</div>